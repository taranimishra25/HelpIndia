        <% for(let product of products){%>
            <div class="card" mb-3>
                <div class="row">
                    <div class="col-md-4">
                        <img src="<%=product.image%>" class="img-fluid">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                 <%=product.title%>
                            </h5>
                            <p class="card-text">
                                <%=product.description%>
                            </p>
                            <a href="/products/<%=product._id%>" class="btn btn-primary">View</a>
                        </div>
                    </div>
                </div>
            </div>
        <%}%>
    
